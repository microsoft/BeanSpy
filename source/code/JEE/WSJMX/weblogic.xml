<weblogic-web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://www.bea.com/ns/weblogic/weblogic-web-app.xsd"
                  xmlns="http://www.bea.com/ns/weblogic/weblogic-web-app">

  <!-- The role-name should map to the security role listed in the  -->
  <!-- web.xml deployment descriptor.                               -->
  <!-- The principal-name should map to the name of the WebLogic    -->
  <!-- group that the role matches to.                              -->
  <security-role-assignment>
    <role-name>monitoring</role-name>
    <principal-name>Monitors</principal-name>
  </security-role-assignment>
  
  <security-role-assignment>
    <role-name>invoke</role-name>
    <principal-name>Operators</principal-name>
  </security-role-assignment>

</weblogic-web-app>
